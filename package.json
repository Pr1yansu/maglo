{
  "name": "maglo",
  "version": "1.0.0",
  "description": "Modern full-stack application with NestJS backend and React frontend",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run start:dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:prod": "npm run build:backend:prod && npm run build:frontend:prod",
    "build:backend": "cd backend && npm run build",
    "build:backend:prod": "cd backend && npm run build:prod",
    "build:frontend": "cd frontend && npm run build",
    "build:frontend:prod": "cd frontend && npm run build:prod",
    "build:analyze": "cd frontend && npm run build:analyze",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm run test",
    "test:frontend": "cd frontend && npm run test",
    "db:generate": "cd backend && npm run db:generate",
    "db:migrate": "cd backend && npm run db:migrate",
    "db:push": "cd backend && npm run db:push",
    "db:studio": "cd backend && npm run db:studio"
  },
  "workspaces": [
    "backend",
    "frontend"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "nestjs",
    "react",
    "typescript",
    "graphql",
    "drizzle",
    "vite",
    "shadcn",
    "gsap"
  ],
  "author": "Pr1yansu",
  "license": "MIT"
}
